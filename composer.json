{
  "name": "borschphp/borsch-skeleton",
  "description": "A Borsch Framework skeleton application to kick start development.",
  "homepage": "http://github.com/borschphp/borsck-skeleton",
  "license": "MIT",
  "keywords": [
    "borsch",
    "framework",
    "skeleton",
    "middleware",
    "psr",
    "psr-7",
    "psr-15"
  ],
  "authors": [
    {
      "name": "Alexandre DEBUSSCHERE",
      "email": "alexandre.debusschere@hey.com"
    }
  ],
  "require": {
    "php": "^8.0",
    "ext-json": "*",
    "ext-libxml": "*",
    "ext-pdo": "*",
    "ext-simplexml": "*",
    "borschphp/application": "^1",
    "borschphp/chef": "^1",
    "laminas/laminas-diactoros": "^2",
    "monolog/monolog": "^2",
    "vlucas/phpdotenv": "^v5.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^9"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    },
    "files": [
      "bootstrap/defines.inc.php",
      "bootstrap/helpers.php",
      "bootstrap/env.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "AppTest\\": "tests/"
    }
  },
  "scripts": {
    "post-create-project-cmd": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
      "BORSCH_TEMP_KEYGEN=`date +%s | sha256sum | base64 | head -c 32`;sed -i \"s/APP_KEY=/APP_KEY=$BORSCH_TEMP_KEYGEN/g\" .env"
    ],
    "test": "./vendor/bin/phpunit tests --testdox",
    "test-win": ".\\vendor\\bin\\phpunit tests --testdox"
  }
}
